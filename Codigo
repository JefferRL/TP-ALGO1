void Ganador_de_partida(int n, int n1, int n2, int dj, int dj2, int dj3, int dj4, int dj5, int dj6)
{
	int ganador_final_j = 0, ganador_final_c = 0;


	if (dj2 + dj4 + dj6 == n + n1 + n2)
	{
		cout << "\t\tGanador de esta ronda: Computadora" << endl;
		ganador_final_c++;
	}
	else if (dj + dj3 + dj5 == n + n1 + n2)
	{
		cout << "\t\tGanador de esta ronda: Jugador" << endl;
		ganador_final_j++;
	}
	else if (dj2 + dj4 + dj6 != n + n1 + n2 || dj + dj3 + dj5 != n + n1 + n2)
	{
		cout << "\t\tGanador: Ninguno" << endl;
	}

	if (ganador_final_c > ganador_final_j)
	{
		cout << "El ganador es el computador" << endl;
	}
	else if (ganador_final_c < ganador_final_j)
	{
		cout << "El ganador es el jugador" << endl;
	}
}

int main()
{
	Console::ForegroundColor = ConsoleColor::Green;
	system("mode con: cols=140 lines=40");

