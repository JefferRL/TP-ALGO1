	int repeticiones = 1;
	int ganador_final_j = 0, ganador_final_c = 0;

	while (repeticiones < 11)
	{
		srand(time(nullptr));
		n = 1 + rand() % 6;
		n1 = 1 + rand() % 6;
		n2 = 1 + rand() % 6;
		dj = 1 + rand() % 6;
		dj2 = 1 + rand() % 6;
		dj3 = 1 + rand() % 6;
		dj4 = 1 + rand() % 6;
